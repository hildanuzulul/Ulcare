<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme dasar legacy (kalau ada view non-Compose) -->
    <style name="Theme.ULCARE" parent="android:Theme.Material.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFFFF</item>
        <item name="colorOnPrimary">#FF000000</item>
    </style>

    <!-- Splash SELALU light dan lanjut ke theme light -->
    <style name="Theme.ULCARE.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ulcare_logo</item>
        <item name="windowSplashScreenBackground">@color/ulcare_white</item>
        <item name="postSplashScreenTheme">@style/Theme.ULCARE.NoActionBar.Light</item>
    </style>

    <!-- Material 3: SELALU LIGHT + With ActionBar -->
    <style name="Theme.ULCARE.WithActionBar.Light" parent="Theme.Material3.Light">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/ulcare_white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <!-- Material 3: SELALU LIGHT + NoActionBar (disarankan untuk layar Compose penuh) -->
    <style name="Theme.ULCARE.NoActionBar.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/ulcare_white</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

</resources>
