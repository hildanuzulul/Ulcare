<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" android:required="true" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="true" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- fallback untuk Android 12 ke bawah -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="36"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ULCARE.NoActionBar.Light">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ULCARE.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IdentityActivity"
            android:exported="false"
            android:theme="@style/Theme.ULCARE.NoActionBar.Light"/>
        <activity
            android:name=".ResultActivityS"
            android:exported="false"
            android:theme="@style/Theme.ULCARE.NoActionBar.Light" />
        <activity
            android:name=".ConfirmImageActivity"
            android:exported="false"
            android:theme="@style/Theme.ULCARE.NoActionBar.Light"/>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ULCARE.NoActionBar.Light" />
        <activity
            android:name=".AboutActivity"
            android:theme="@style/Theme.ULCARE.WithActionBar.Light"
            android:exported="false" /> <!-- <intent-filter> -->
    </application>

</manifest>